{
    "name": "phpcs-api/phpcs-api",
    "description": "A simple API for PHP_CodeSniffer",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "PHPCS API Team",
            "email": "info@example.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "squizlabs/php_codesniffer": "^3.7",
        "phpcompatibility/phpcompatibility-wp": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "PhpcsApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpcsApi\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests/unit",
        "test:coverage": "phpunit --coverage-html coverage tests/unit"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
